<body>
    <div class="login-container">
        <h1>Login</h1>
        <form action="/signin" method="POST" class="login-form">
            <div class="form-group">
                <label for="usernameOrEmail">Username or Email</label>
                <input type="text" id="usernameOrEmail" name="usernameOrEmail" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" class="btn">Login</button>
        </form>
        <!-- <p>Don't have an account? <a href="/signup">Sign up here</a></p> -->
    </div>

    <script>
        const loginForm = document.querySelector('.login-form');
        const loginUsernameOrEmailInput = document.getElementById('usernameOrEmail');
        const loginPasswordInput = document.getElementById('password'); // Fixed id reference
    
        const errorColor = "var(--bg-color-green-light)"; // Using CSS variable for errors
    
        // Regex for validating email format
        const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    
        loginForm.addEventListener('submit', function (e) {
            let valid = true;
    
            // Reset input styles
            loginUsernameOrEmailInput.style.borderColor = '';
            loginPasswordInput.style.borderColor = '';
    
            const usernameOrEmail = loginUsernameOrEmailInput.value.trim();
            const password = loginPasswordInput.value.trim();
    
            // Check if username or email is filled
            if (usernameOrEmail === '') {
                alert('Username or Email is required.');
                loginUsernameOrEmailInput.style.borderColor = errorColor;
                valid = false;
            } else if (usernameOrEmail.includes('@') && emailPattern.test(usernameOrEmail) === false) {
                alert('Invalid email format.');
                loginUsernameOrEmailInput.style.borderColor = errorColor;
                valid = false;
            }
    
            // Check if password is filled
            if (password === '') {
                alert('Password is required.');
                loginPasswordInput.style.borderColor = errorColor;
                valid = false;
            }
    
            // If any validation fails, prevent form submission
            if (!valid) {
                e.preventDefault();
            }
        });

              '<% if (error.length>0) { %>'
                toastr.error("<%= error[0] %>");
            '<% } %>'
    
            '<% if (success.length>0) { %>'
                toastr.success("<%= success[0] %>");
            '<% } %>'
    </script>
    
</body>
